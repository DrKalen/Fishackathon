
<h1>All Locations</h1>

<table>
  <tr>
    <th>&nbsp;</th>
    <th>Title</th>
    <th>Lat/Long</th>
    <th>Description</th>
    <th>Status</th>
    <th>ID</th>
  </tr>

  <% @locations.each do |location| %>
  <tr>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= location.title %></td>
    <td><%= location.latitude %>/<%= location.longitude %></td>
    <td><%= location.description %></td>
    <td><%= location.status %></td>
    <td><%= location.id %></td>
  </tr>
  <% end %>
  </table>
